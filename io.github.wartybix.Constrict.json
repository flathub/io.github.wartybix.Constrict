{
    "id" : "io.github.wartybix.Constrict",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "command" : "constrict",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "add-extensions" : {
        "org.freedesktop.Platform.ffmpeg-full" : {
            "version" : "24.08",
            "directory" : "lib/ffmpeg",
            "add-ld-path" : ".",
            "no-autodownload" : false,
            "autodelete" : false
        }
    },
    "cleanup-commands" : [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libva-utils",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/intel/libva-utils/archive/refs/tags/2.22.0.tar.gz",
                    "sha256" : "7b57615c130427ec134bb5d2b80af516ce5bb19a40e89b1dab46a0d59760d96c"
                }
            ]
        },
        {
            "name" : "totem-pl-parser",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gitlab.gnome.org/GNOME/totem-pl-parser/-/archive/V_3_26_6/totem-pl-parser-V_3_26_6.tar.gz",
                    "mirror-urls" : [
                        "https://github.com/GNOME/totem-pl-parser/archive/refs/tags/V_3_26_6.tar.gz"
                    ],
                    "sha256" : "7219272a4863f823e2dd6d997e78d725de9e6071b1af1b478870f207731a8234"
                }
            ]
        },
        {
            "name" : "totem-video-thumbnailer",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/totem-video-thumbnailer.git",
                    "commit" : "d295d9db51955f824bba83e15cabbdfa5c6d1bf7"
                }
            ]
        },
        {
            "name" : "constrict",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/Wartybix/Constrict/archive/refs/tags/25.8.1.tar.gz",
                    "sha256" : "e8cb6688fa8d2f24b34bddb4a6252a958a8c4537f54d9bfadb7b3f04a6c2d8ac"
                }
            ]
        }
    ]
}
